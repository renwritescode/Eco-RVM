# Eco-RVM Environment Variables
# Copy this file to .env and customize values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Database
DATABASE_URL=sqlite:///data/eco_rvm.db

# Serial Communication (Arduino)
SERIAL_PORT=COM3
SERIAL_BAUDRATE=9600
SERIAL_TIMEOUT=1

# Camera
CAMERA_ID=0

# API
API_BASE_URL=http://localhost:5000/api

# AI Model
MODEL_PATH=ml/models/modelo_reciclaje.h5
MIN_CONFIDENCE=0.70

# Points System
POINTS_PER_RECYCLE=10

# Environmental Impact Factors
CO2_PER_PLASTIC_BOTTLE=0.05
CO2_PER_METAL_CAN=0.03
WEIGHT_PER_PLASTIC_BOTTLE=0.025
WEIGHT_PER_METAL_CAN=0.015
